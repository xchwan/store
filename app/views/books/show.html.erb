<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<%= form_for @book, url: apply_coupon_book_path(@book), method: :get do |f| %>
  <%= f.text_field :coupon %>
  <%= f.submit 'use coupon' %>
<% end %>

<%= link_to 'Edit', edit_book_path(@book) %> |
